<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/register.css' />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.4.1/css/all.css"
      integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz"
      crossorigin="anonymous">

  </head>

  <body>
    <header>
      <%- include('modules/navbar') %>
    </header>
    <main>

    <div class="container-xxl">
      
      <div class="row">
        <div class="col-12">
          
              <div class="formulario d-block mx-auto ">
                <h1>Company Registration</h1>
                <form action="/company/register" method="post">
                  <hr>
                  <div>
                    <label id="icon" for="name"><i class="bi bi-building"></i></label>
                    <input type="text" maxlength="100" name="name" id="name" placeholder="Company Name"
                      value="<%= typeof mensajes !== 'undefined'? mensajes.textName : '' %>">
                    <% if(typeof mensajes !=='undefined' && mensajes.name!="" ){ %>
                      <p style="color: red;">
                        <%= mensajes.name %>
                      </p>
                      <% } %>
                  </div>
                  <div>
                    <label id="icon" for="email"><i class="fas fa-envelope"></i></label>
                    <input type="text" name="email" id="email" placeholder="Email"
                      value="<%= typeof mensajes !== 'undefined'? mensajes.textEmail : '' %>">
                    <% if(typeof mensajes !=='undefined' && mensajes.email!="" ){ %>
                      <p style="color: red;">
                        <%= mensajes.email %>
                      </p>
                      <% } %>
                  </div>
                  <div>
                    <label id="icon" for="pasword"><i
                        class="fas fa-unlock-alt"></i></label>
                    <input type="password" name="password" id="password"
                      placeholder="Password"
                      value="<%= typeof mensajes !== 'undefined'? mensajes.textPassword : '' %>"
                      >
                      <% if(typeof mensajes !== 'undefined' && mensajes.password!=""){ %>
                        <p style="color: red;"><%= mensajes.password %></p>
                      <% } %>
                  </div>
                  <div>
                    <label id="icon" for="password2"><i class="fas fa-unlock-alt"></i></label>
                    <input type="password" name="passwordRepeat" id="password2"
                      placeholder="Password Repeat"
                      value="<%= typeof mensajes !== 'undefined'? mensajes.textPasswordRepeat : '' %>"
                      >
                      <% if(typeof mensajes !== 'undefined' && mensajes.passwordRepeat!=""){ %>
                        <p style="color: red;"><%= mensajes.passwordRepeat %></p>
                      <% } %>
                  </div>
                  <hr>
                  <div class="boton">
                    <button class="botonSubmit" onclick="window.location.href='/'" type="submit" href="/">Submit</button>
                  </div>
                </form>
              </div>
              </div>
                </div>
        </div>

    </main>
    <footer>
      <%- include('modules/footer') %>

    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
  </body>

</html>
<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/oneCompany.css' />
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">
    <link
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet" />
  </head>

  <body>
    <header>
      <%- include('modules/navbar') %>
    </header>
    <main>
      <section class="section-company">
        <h2 class="text-center titulo  pb-5">OUR COMPANIES</h2>
        <div class="container justify-content-center">
          <div
            class="row align-items-center justify-content-around flex-row-reverse pb-5">
            <div class="col-12 col-md-10">
              <div class="card cartainfo " style="background-color: #E9E5DD">
                <div class="row align-items-center">
                  <div class="col-md-4">
                    <img
                      src="/images/company/<%= result.img?result.img:'default.jpg' %>"
                      class="card-img rounded-4 p-2" alt="Artist desk">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h3 class="h5 card-title fs-3">
                        <%= result.name %>
                      </h3>
                      <p class="card-text mb-1">
                        <%= result.description %>
                      </p>
                      <p class="card-text mb-2">
                        <%= result.address %>
                      </p>
                      <p class="card-text mb-2">
                        <%= result.city %>
                      </p>
                      <p class="card-text mb-1s">
                        <%= result.tel %>
                      </p>
                      <div
                        class="d-flex  align-items-center">
                        <div>
                          <h4 class="card-text small fs-5"><i
                              class="bi bi-envelope me-2"></i>
                            <%= result.email %>
                          </h4>
                        </div>
                        </div>
                        <div class="botones pt-sm-3 pt-0 d-flex justify-content-end">
                          <button onclick="window.location.href='/company/showEditCompany/<%= result.company_id %>'"
                            class="boton mt-5 me-1" style="width: 3rem;"><i
                              class="bi bi-pencil"></i></button>
                          <button onclick="window.location.href='/company/logicDelCompany/<%= result.company_id %>'"
                            class="boton mt-5 me-1" style="width: 3rem;"><i class="bi bi-x-circle"></i></button>
                          <button onclick="window.location.href='/company/deleteCompany/<%= result.company_id %>';return confirm('Are you sure you want to delete this company?')"
                            class="boton mt-5 me-1" style="width: 3rem;"><i class="bi bi-trash"></i></button>
                        </div>
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="section-offers pb-5">
        <h2 class="text-center pb-5 pt-5">JOB OFFERS</h2>
        <div class="row m-0">
          <div class="botones-titulo d-flex justify-content-md-end col-12 col-md-10 column-gap-3 justify-content-center">
            <button
              onclick="window.location.href='/offer/showOfferForm/<%= result.company_id %>'"
              class="boton">ADD OFFER</button>
              <button onclick="window.location.href='/'"
              class="boton"><i
                class="bi bi-arrow-return-left"></i></button>
          </div>
        </div>
        <div class="container pt-5 w-75">
          <div class="list-group mb-5">
            <% resultOffer.forEach((offer)=>{ %>
              <li
                class="list-group-item row d-flex text-center row-gap-4 pt-3 pb-3">
                <div class="col-12 col-md-5 ">
                  <img
                    src="/images/offers/<%= offer.img?offer.img:'default.jpg' %>"
                    class="img-offer " alt="...">
                </div>
                <div
                  class="col-12 col-md-4 align-content-center informacion d-block mx-auto">
                  <h3>
                    <%= offer.title %>
                  </h3>
                  <p>
                    <%= offer.offer_description %>
                      <br />
                  </p>
                  <span><i class="bi bi-wallet2 pe-1"></i>
                    <%= offer.salary %> â‚¬
                  </span>
                </div>

                <div
                  class="col-12 col-xl-3 botones-edit align-content-end text-center text-xl-end pt-0 pb-3 pt-md-2 pb-xl-0">
                  <a href= "/offer/showEditOffer/<%= offer.offer_id %>"
                    class="m-1 boton text-decoration-none "><i
                    class="bi bi-pencil"></i></a>
                    <a href="/offer/logicDeleteOffer/<%= offer.offer_id %>/<%= result.company_id %>" class="m-1 boton"
                      ><i class="bi bi-x-circle"></i></a>
                    <a href="/offer/deleteOffer/<%= offer.offer_id %>/<%= result.company_id %>" class="m-1 boton"
                      onclick="return confirm('Are you sure you want to delete this offer?')"
                      ><i class="bi bi-trash"></i></a>
                  
                </div>
              </li>
              <% }) %>
          </div>
        </div>
    
      </section>
    </main>

    <footer>
      <%- include('modules/footer') %>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
  </body>

</html>
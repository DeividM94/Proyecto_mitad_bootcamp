<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/index.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  </head>
  <body>
    <header>
      <%- include('modules/navbar') %>
    </header>
    <main>
     <video class="videofondo" autoplay loop muted plays-inline src="/images/background1.mov"></video>
    <div class="container-fluid">
    
        <div class="row titulo align-items-center pb-5">
          <div class="col-12 text-center"><h1 class="texto">PORTAL<span class="jobs p-3 rounded-5">JOBS</span></h1></div>
        </div>
      



    
      <div class="row company row-gap-5 pt-5 justify-content-center pb-5">
        <h2 class="titulo-company text-center fs-1">Registered Companies

        </h2>
      <% result.forEach((company)=>{ %>
        
      <div class="col-12 col-md-6 col-lg-3 d-flex justify-content-center">
        <div class="card rounded-4">
          <img class="card-img-top rounded-top-4" src="/images/company/<%= company.img?company.img:'default.jpg' %>" alt="Card image cap">
          <div class="card-body">
            <h3 class="card-title text-center"><%= company.name %></h3>
            <p class="card-text text-center text-"><%= company.email %></p>
            <div class="text-center"><button class="boton" onclick="window.location.href='/company/oneCompany/<%= company.company_id %>'">Job Offers</button></div>
          </div>
        </div>
      </div>
      <% }) %>
        </div>
    </div>


</main>

<footer>

  <%- include('modules/footer') %>



</footer>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
